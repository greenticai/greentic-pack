{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/greenticai/greentic-flow/refs/heads/master/schemas/ygtc.flow.schema.json",
  "title": "Greentic YGTC Flow (self-describing nodes)",
  "type": "object",
  "required": ["id", "type", "nodes"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "type": {
      "anyOf": [
        {
          "type": "string",
          "enum": ["messaging", "webhook", "timer", "websocket", "pubsub"]
        },
        { "type": "string" }
      ],
      "description": "Flow kind; well-known values include 'messaging' and 'events', but custom strings (e.g., 'component-config') are allowed."
    },
    "start": { "type": "string" },
    "parameters": { "type": "object", "additionalProperties": true },
    "meta": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional namespaced metadata (e.g., meta.greentic.*)."
    },
    "entrypoints": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional entrypoints keyed by name (e.g., default, telegram, http:/path)."
    },
    "schema_version": { "type": "integer", "minimum": 1 },
    "nodes": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z_][\\w-]*$": {
          "type": "object",
          "minProperties": 1,
          "description": "Node keyed by human-friendly name; exactly one operation key plus optional metadata.",
          "properties": {
            "routing": {
              "description": "Routing can be shorthand or explicit list",
              "oneOf": [
                { "type": "string", "enum": ["out", "reply"] },
                {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                      "to": { "type": "string" },
                      "out": { "type": "boolean" },
                      "status": { "type": "string" },
                      "reply": { "type": "boolean" }
                    }
                  }
                }
              ]
            },
            "telemetry": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "span_name": { "type": "string" },
                "attributes": {
                  "type": "object",
                  "additionalProperties": { "type": "string" }
                },
                "sampling": { "type": "string" }
              }
            },
            "output": {
              "type": "object",
              "additionalProperties": true
            },
            "retry": { "type": "object" },
            "timeout": { "type": "object" },
            "when": { "type": "object" },
            "annotations": { "type": "object" },
            "meta": { "type": "object" }
          },
          "patternProperties": {
            "^[A-Za-z_][\\w-]*$": {
              "description": "Operation payload (exactly one op key is required).",
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      }
    }
  }
}

