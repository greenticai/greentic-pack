[package]
name = "greentic-flow"
version = "0.4.43"
edition = "2024"
rust-version = "1.90"
license = "MIT"
description = "Generic YGTC flow schema/loader/IR for self-describing component nodes."
repository = "https://github.com/greenticai/greentic-flow"

[features]
default = []
toml = ["dep:toml"]

[dependencies]
anyhow = "1"
clap = { version = "4", features = ["derive"] }
greentic-interfaces = "=0.4.93"
greentic-types = { version = "0.4", features = ["telemetry-autoinit", "schema"] }
serde = { version = "1", features = ["derive"] }
serde_yaml_bw = { package = "serde_yaml", version = "0.9" }
serde_json = "1"
ciborium = "0.2"
handlebars = "6"
jsonschema = { version = "0.42"}
thiserror = "2"
regex = "1"
indexmap = { version = "2", features = ["serde"] }
lazy_static = "1"
toml = { version = "0.9", optional = true }
tracing = "0.1"
tokio = { version = "1", features = ["rt-multi-thread", "macros"] }
blake3 = "1"
pathdiff = "0.2"
sha2 = "0.10"
semver = "1"
greentic-distributor-client = { version = "0.4", default-features = false, features = ["dist-client", "http-runtime"] }
url = "2"
wasmtime = { version = "41", features = ["component-model"] }
qa-spec = "0.4"

[dev-dependencies]
assert_cmd = "2"
predicates = "3"
pretty_assertions = "1"
insta = "1"
tempfile = "3"

